IMAGE_REGISTRY_URI?=4m3ndy/amazon-scrapper-service
IMAGE_TAG?=v1.0.0

init:
	go mod download

build:
	go build -v -x -o bin/main cmd/server/*.go

run:
	AMAZON_SCRAPPER_SVC_HTTP_PORT=8080 go run cmd/server/main.go

docker-build:
	docker build . -f Dockerfile -t ${IMAGE_REGISTRY_URI}:${IMAGE_TAG}

docker-push:
